            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input name="phone" type="number" class="form-control" id="phone" placeholder="Enter your phone number" required>
            </div>
            <div class="mb-3">
                <label for="otp" class="form-label">OTP</label>
                <input name="otp" type="number" class="form-control" id="phone" placeholder="Enter OTP" required>
